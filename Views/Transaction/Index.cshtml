@model IEnumerable<BankTansactions.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Passbook</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenificiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            
            <th>
                <a asp-action="AddOrEdit" class="btn btn-sm btn-success w-100">
                    <i class="fa-solid fa-plus"></i> <span style="text-transform: none;">New</span>
                </a>
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenificiaryName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            
            <td>
                    <form asp-action="Delete" asp-route-id="@item.TransactionId">
                        <div class="btn-group btn-group-sm w-100">
                            <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId" class="btn btn-warning">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure to delete this record?')">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </div>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
